{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["generate:licenses", "^build"],
      "outputs": ["dist/**", ".vercel/output/**"]
    },
    "generate:licenses": {
      "dependsOn": ["^generate:licenses"],
      "outputs": ["./apps/web/__generated__/licenses.json"]
    },
    "lint": {},
    "clean": {
      "cache": false
    },
    "format": {},
    "check:format": {},
    "start": {
      "dependsOn": ["generate:licenses"],
      "cache": false,
      "persistent": true
    }
  }
}
