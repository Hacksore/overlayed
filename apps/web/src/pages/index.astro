---
import Layout from "../layouts/Layout.astro";
import Card from "../components/card.astro";
import Link from "../components/link.astro";
import Footer from "../components/footer.astro";
import Hero from "../components/hero.astro";
import { Download } from "../components/react/download";
---

<style>
  main {
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }

  .main-content {
    margin: auto;
    width: 800px;
    max-width: calc(100% - 2rem);
  }
</style>

<Layout>
  <main class="pt-48">
    <Hero />
    
    <div class="relative z-50 main-content pt-4 pb-4 px-4 min-h-screen w-full flex justify-center items-center flex-col gap-10">
    <h1 class="!mb-0">
      Welcome to <span class="text-[#5865f2]">Overlayed</span>
    </h1>
    <!-- prettier-ignore -->
    <p class="text-center text-zinc-400">
      A modern, <Link underline class="text-white" to="https://github.com/Hacksore/overlayed">open-source</Link>, and free voice chat overlay for Discord that supports macOS, Linux, and Windows!
    </p>
    <Link
      to="/about"
      class="bg-slate-800 hover:bg-gray-700 p-2 px-4 rounded-lg"
    >
    Why does this exist?
    </Link>
    <Download client:load />
    <div class="cards grid md:grid-cols-2 w-full items-center gap-8">
      <Card
        name="User List"
        desc="See who is talking, muted, and deafened in the current voice channel"
        src="/img/users.png"
        alt="User List"
      />
      <Card
        name="Transparent & Clickthrough"
        desc="Transparent window that can ignore mouse clicks"
        src="/img/transparent.png"
        alt="Transparent"
      />
      <Card
        name="Always on Top"
        desc="Always stays on top so you can continue working or gaming"
        src="/img/on-top.png"
        alt="Always on top"
      />
      <Card
        name="Blazingly Fastâ„¢"
        desc="Built with tauri an efficient rust framework"
        src="/img/resources.png"
        alt="Lightweight"
      />
    </div>
    <Footer />
  </div>
  </div>
  </main>
</Layout>